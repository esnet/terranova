{
    "name": "terranova-frontend",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build-static-overwrites": "echo 'copy static files...' && rm -Rf dist/static && mkdir dist/static && cp node_modules/esnet-networkmap-panel/src/components/lib/* dist/static",
        "build-css": "tailwindcss --input src/index.css --output dist/terranova.css --config tailwind.config.cjs",
        "watch-css": "tailwindcss --input src/index.css --output dist/terranova.css --config tailwind.config.cjs --watch",
        "build": "npm run build-css && npm run build-js && npm run build-static-overwrites",
        "build-js": "tsc && vite build --mode=production",
        "build-test-static-overwrites": "echo 'copy static files to dist-test...' && rm -Rf dist-test/static && mkdir dist-test/static && cp node_modules/esnet-networkmap-panel/src/components/lib/* dist-test/static && cp static/settings.js dist-test/static/settings.js",
        "build-test-js": "vite build -c vite.config.test.ts --mode=production",
        "build-test": "npm run build-css && npm run build-test-js && npm run build-test-static-overwrites",
        "preview": "vite preview",
        "generate-client": "@hey-api/openapi-ts -i http://localhost:8000/openapi.json -o ../client/typescript"
    },
    "dependencies": {
        "@esnet/esnet-tokens": "file:../../../packets-terranova/design-tokens",
        "@esnet/packets-ui": "file:../../../packets-terranova/ui",
        "esnet-networkmap-panel": "^3.0.0-beta5",
        "jwt-decode": "^3.1.2",
        "keycloak-js": "^22.0.0",
        "lodash": "^4.17.21",
        "lucide-react": "^0.525.0",
        "lucide-static": "^0.263.0",
        "oidc-client-ts": "^2.2.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-oidc-context": "^2.2.2",
        "react-router-dom": "^6.11.1"
    },
    "devDependencies": {
        "@hey-api/openapi-ts": "^0.87.0",
        "@tailwindcss/cli": "^4.1.14",
        "@tailwindcss/vite": "^4.1.16",
        "@types/node": "^24.10.0",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "@vitejs/plugin-react": "^3.1.0",
        "tailwindcss": "^4.1.16",
        "typescript": "^5.9.3",
        "vite": "^7.2.0"
    }
}